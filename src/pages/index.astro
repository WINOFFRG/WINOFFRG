---
import Layout from "@/layouts/Layout.astro";
import SocialLink from "@/components/SocialLink.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import profileImage from "@/assets/profile.jpeg";
import oiaUiaGif from "@/assets/oia-uia.gif";

const projects = [
  {
    title: "Limeplay UI",
    description:
      "Modern UI library for building video players using Shaka Player & shadcn/ui",
    href: "https://limeplay.winoffrg.dev",
    image: "https://limeplay.winoffrg.dev/opengraph-image.png",
  },
  {
    title: "OTTPRO Extension",
    description:
      "Patches for OTT Platforms, bypass Netflix household device blocking",
    href: "https://ottpro.winoffrg.dev",
    image:
      "https://raw.githubusercontent.com/WINOFFRG/ottpro/refs/heads/master/assets/github_banner.png",
  },
];
---

<Layout
  title="Rohan Gupta - Portfolio"
  description="Software engineer at Zomato, Building Limeplay UI"
>
  <div
    class="mx-auto max-w-2xl overflow-x-hidden px-6 py-12 leading-relaxed antialiased sm:py-16 md:overflow-x-visible"
  >
    <main class="intro-wrapper group">
      <div class="flex items-center gap-4 mt-6 mb-6 sm:mt-12">
        <div class="relative size-10 overflow-hidden flex-shrink-0">
          <img
            src={profileImage.src}
            alt="Rohan Gupta"
            class="rounded-xl border-2 border-white size-full object-cover transition-opacity duration-300 group-hover:opacity-0"
          />
          <img
            src={oiaUiaGif.src}
            alt="Hacking animation"
            class="absolute inset-0 size-full object-cover opacity-0 transition-opacity duration-300 group-hover:opacity-100"
          />
        </div>
        <h1
          class="text-white flex w-full items-center text-2xl font-semibold tracking-tight sm:text-3xl"
        >
          Hey, I'm Rohan Gupta
        </h1>
      </div>

      <p class="intro-paragraph text-neutral-300 mb-8 text-lg leading-relaxed">
        I'm a software engineer at
        <a
          href="https://zomato.com"
          target="_blank"
          rel="noreferrer"
          aria-label="Zomato"
          tabindex="0"
          class="text-white hover:text-neutral-300 underline underline-offset-4 decoration-neutral-500 hover:decoration-neutral-300 font-medium transition-colors duration-200"
        >
          Zomato
        </a>. I love working with OTT technologies and have expertise in
        building video players. Iâ€™m deeply passionate about Reverse Engineering
        and Web Security. In my free time, I enjoy exploring applications -
        hacking into shells, de-obfuscating code, and uncovering
        vulnerabilities.
      </p>
    </main>

    <div class="mt-8 flex w-full flex-wrap justify-start gap-3">
      <SocialLink href="mailto:hi@winoffrg.dev" label="Mail" />
      <SocialLink href="https://x.com/winoffrg" label="Twitter" />
      <SocialLink href="https://github.com/winoffrg" label="GitHub" />
    </div>

    <section class="mt-24 w-full sm:mt-32">
      <h2
        class="text-white mb-6 flex w-full items-center text-xl font-semibold"
      >
        Projects
      </h2>
      <div class="grid w-full grid-cols-1 gap-6 sm:grid-cols-2">
        {projects.map((project) => <ProjectCard {...project} />)}
      </div>
    </section>
  </div>
</Layout>
