<Layout
  title="Your Name - Portfolio"
  description="Design engineer & designer building products that feel magical, yet simple and intuitive."
>
  <div
    class="mx-auto max-w-2xl overflow-x-hidden px-6 py-12 leading-relaxed antialiased sm:py-16 md:overflow-x-visible"
  >
    <main>
      <!-- Hero Section -->
      <h1
        class="text-white mt-6 mb-6 flex w-full items-center text-2xl font-semibold tracking-tight sm:mt-12 sm:text-3xl"
      >
        Hey, I'm Your Name
      </h1>

      <p class="text-gray-300 mb-8 text-lg leading-relaxed">
        I'm a design engineer & designer at
        <a
          href="https://example.com"
          target="_blank"
          rel="noreferrer"
          aria-label="Company Name"
          tabindex="0"
          class="text-white hover:text-gray-300 underline underline-offset-4 decoration-gray-500 hover:decoration-gray-300 font-medium transition-colors duration-200"
        >
          Company Name
        </a>. I design and build products that feel magical, yet simple and
        intuitive. I obsess over the smallest details and I like to make people
        feel something through my work.
      </p>

      <!-- Social Links -->
      <div class="mt-8 flex w-full flex-wrap justify-start gap-3">
        <SocialLink href="mailto:your@email.com" label="Mail" />
        <SocialLink href="https://twitter.com/yourusername" label="Twitter" />
        <SocialLink href="https://github.com/yourusername" label="GitHub" />
      </div>

      <!-- Projects Section -->
      <section class="mt-24 w-full sm:mt-32">
        <h2
          class="text-white mb-6 flex w-full items-center text-xl font-semibold"
        >
          Projects
        </h2>
        <div class="grid w-full grid-cols-1 gap-6 sm:grid-cols-2">
          {projects.map((project) => <ProjectCard {...project} />)}
        </div>
      </section>
    </main>
  </div>
</Layout>
